<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customer Home</title>
     <link rel="stylesheet" href="{{ url_for('static', filename='styles/customer_home.css') }}">
</head>
<body>
    <h1 class="title">RPAC Customer Home Page</h1>
        <h2>WELCOME</h2>
        <a class="create_link" href="/create_action">Create Action</a> <a class="logout_link" href="/logout">Logout</a>    
        <table class="assigned_actions_table" id="assigned_actions_table" cellspacing="1" border="1">
                <caption>Your Assigned Actions</caption>
                <thead>
                <tr>
                    <th>View</th>
                    <th>Unit</th>
                    <th>Action Type</th>
                    <th>SM's Last Name</th>
                    <th>Assinged Tech</th>
                    <th>Status</th>
                    <th>Created By</th>
                </tr>
                <tbody>
                {% for action in assigned_actions %}
                <tr>
                    <td><a href=/view_action/{{action[0]}}>View</a></td>
                    <td>{{ action[1] }} </td>
                    <td>{{ action[2] }} </td>
                    <td>{{ action[3] }} </td>
                    <td>{{ action[4] }} </td>
                    <td>{{ action[5] }} </td>
                    <td>{{ action[6] }} </td>
                </tr>
                {% endfor %}
            </table>
        <br></br>
        <table class="RWO_actions_table" id="RWO_actions_table" cellspacing="1" border="1">
                <caption>RWO Actions</caption>
                <thead>
                <tr>
                    <th>View</th>
                    <th>Unit</th>
                    <th>Action Type</th>
                    <th>SM's Last Name</th>
                    <th>Assinged Tech</th>
                    <th>Status</th>
                    <th>Created By</th>
                    <th>Edit</th>
                </tr>
                <tbody>
                {% for action in RWO_actions %}
                <tr>
                    <td><a href=/view_action/{{action[0]}}>View</a></td>
                    <td>{{ action[1] }} </td>
                    <td>{{ action[2] }} </td>
                    <td>{{ action[3] }} </td>
                    <td>{{ action[4] }} </td>
                    <td>{{ action[5] }} </td>
                    <td>{{ action[6] }} </td>
                    <td><a href=/edit_action/{{action[0]}}>Edit</a></td>
                </tr>
                {% endfor %}
            </table>
        <br></br>
        <table class="unassigned_actions_table" id="unassigned_actions_table" cellspacing="1" border="1">
                <caption>Your Unassigned Actions</caption>
                <thead>
                <tr>
                    <th>View</th>
                    <th>Unit</th>
                    <th>Action Type</th>
                    <th>SM's Last Name</th>
                    <th>Assinged Tech</th>
                    <th>Status</th>
                    <th>Created By</th>
                    <th>Edit</th>
                </tr>
                <tbody>
                {% for action in unassigned_actions %}
                <tr>
                    <td><a href=/view_action/{{action[0]}}>View</a></td>
                    <td>{{ action[1] }} </td>
                    <td>{{ action[2] }} </td>
                    <td>{{ action[3] }} </td>
                    <td>{{ action[4] }} </td>
                    <td>{{ action[5] }} </td>
                    <td>{{ action[6] }} </td>
                    <td><a href=/edit_action/{{action[0]}}>Edit</a></td>
                </tr>
                {% endfor %}
            </table>
    <br></br>
</body>
</html>