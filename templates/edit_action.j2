<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Action</title>
     <link rel="stylesheet" href="{{ url_for('static', filename='styles/employee_home.css') }}">
</head>
<body>
    <h1>Edit</h1>
        <table class="action" id="action" cellspacing="1" border="1">
            <caption>Action Being Edited</caption>
            <thread>
            <tr>
                <th>Unit</th>
                <th>Action Type</th>
                <th>SM's Last Name</th>
                <th>Assinged Tech</th>
                <th>Status</th>
                <th>Created By</th>
            </tr>
            <tbody>
            {% for action in action %}
            <tr>
                <td>{{ action[1] }} </td>
                <td>{{ action[2] }} </td>
                <td>{{ action[3] }} </td>
                <td>{{ action[4] }} </td>
                <td>{{ action[5] }} </td>
                <td>{{ action[6] }} </td>
            </tr>

            {% endfor %}
        </table>
    <script>
        function clearForm() {
            document.getElementById('unit').selectedIndex = 0;
            document.getElementById('action_type').selectedIndex = 0;
            document.getElementById('sm_last_name').value = '';
            document.getElementById('assigned_tech_id').value = '';
            document.getElementById('action_status').selectedIndex = 0;
        }
    </script>
    <form action="/edit_action/{{ action[0][0] }}" method="post" name="Edit_Action" id="Edit_Action">
       <input type="hidden" id="action_id" name="action_id" value={{ action[0][0] }} 
        <label for="unit">Unit:</label>
        <select name="unit" id="unit">
            <option value="{{ action[0][1] }}">-Choose a unit-<option>
            <option value="395">395</option>
            <option value="420">420</option>
            <option value="889">889</option>
            <option value="378">378</option>
        </select>
        <label for="action_type">Action Type:</label>
        <select name="action_type" id="action_type">
            <option value="{{ action[0][2] }}">-Choose an action type-<option>
            <option value="admin">Admin</option>
            <option value="finance">Finance</option>
            <option value="Commanders">Commanders/option>
            <option value="other">Other</option>
        </select>
        <label for="sm_last_name">SM Last Name:</label>
        <input type="text" id="sm_last_name" name="sm_last_name" value="{{ action[0][3] }}">
        <label for="assigned_tech_id">Tech ID:</label>
        <input type="number" id="assigned_tech_id" name="assigned_tech_id" value="{{ action[0][4] }}">
        <label for="action_type">Action Type:</label>
        <select name="action_status" id="action_status">
            <option value="{{ action[0][5] }}">-Choose an action status-<option>
            <option value="complete">Complete</option>
            <option value="RWO">Return without action</option>
            <option value="Unassigned">Unassigned/option>
        </select><br><br>
        <input type="submit" value="Edit" name="Edit_Action">
        <button type="button" onclick="clearForm()">Cancel</button>
    </form>
        <button onclick="goBack()">Go Back</button>
        <script>
        function goBack() {
            window.history.back();
        }
        </script>

</body>
</html>